<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="piccle.startupwe.piccle.JoinActivity">

    <TextView
        android:text="이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        />

    <EditText
        android:hint="길동"
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="10dp"
        android:text="성"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLastName"
        />

    <EditText
        android:hint="홍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLastName"
        />

    <TextView
        android:paddingTop="10dp"
        android:text="생년월일"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDate"
        />

    <EditText
        android:hint="2001.01.01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDate"
        />

    <TextView
        android:paddingTop="10dp"
        android:text="이메일"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEmail"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:hint="startup@piccle.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextEmail"
            android:maxLength="30"
            />

        <Button
            android:id="@+id/emailAccept"
            android:text="인증하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:paddingTop="10dp"
        android:text="전화번호"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNumber"
        />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <EditText
            android:hint="010-1234-5678"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNumber"
            android:maxLength="15"
            />

        <Button
            android:id="@+id/numberAccept"
            android:text="인증요청"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:hint="xxxxxx"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/AcceptingNumber"
            android:maxLength="6"
            />

        <Button
            android:id="@+id/numberAccepted"
            android:text="인증하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
