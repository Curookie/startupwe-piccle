<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_giver_list"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="piccle.startupwe.piccle.ShowGiverListActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#00CFB5"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
            android:id="@+id/phoneB"
            android:background="@mipmap/img_phone"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_width="20dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/dslrB"
                android:background="@mipmap/img_dlsr"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|center" />
        </FrameLayout>

    </LinearLayout>

    <Button
        android:text="선택"
        android:id="@+id/btnSelect"
        android:background="#00CFB5"
        android:layout_height="20dp"
        android:layout_width="70dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/portfolioView1"
	    android:background="@mipmap/firstimg1"
        android:layout_width="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="50dp"
        android:layout_height="130dp" />

    <Button
        android:text="선택"
        android:id="@+id/button2"
        android:background="#00CFB5"
        android:layout_height="20dp"
        android:layout_width="70dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:id="@+id/portfolioView2"
        android:background="@mipmap/secondimgs"
        android:layout_width="wrap_content"
        android:layout_height="130dp" />


</LinearLayout>
